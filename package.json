{
  "name": "nfo-approval-portal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently --raw --kill-others \"npm run dev:backend\" \"npm run dev:frontend:wait\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:frontend:wait": "wait-on tcp:127.0.0.1:8787 && npm run dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:all": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "seed": "cd backend && npm run import:employees",
    "create:poc": "cd backend && npm run create:poc",
    "create:vendor": "cd backend && npm run create:vendor",
    "create:admin": "cd backend && npm run create:admin"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "concurrently": "^9.1.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "lucide-react": "^0.575.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
